@{
  Layout = "_Layout";
}

@using System.Security.Claims

<div class="viewContainer">
    <h2>Authentication with Identity</h2>
    <hr />
    @if (User.Identity.IsAuthenticated)
    {
        <p>Hello @User.Identity.Name!</p>
        @using (Html.BeginForm("LogOff", "Account"))
        {
            <input type="submit" class="btn btn-primary btn-large" value="Log out" />
        }
    }
    else
    {
        @Html.ActionLink("Register", "Register", null, null, new { @class = "btn btn-primary btn-large" })

        @Html.ActionLink("Login", "Login", null, null, new { @class = "btn btn-primary btn-large" })
    }

    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-primary btn-large" })
</div>