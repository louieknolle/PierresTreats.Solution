@{
  Layout = "_Layout";
}

@using SweetShop.ViewModels

@model LoginViewModel
<div class="viewContainer">
  <h2>Log in to your sweet account!</h2>
  <hr />
  @using (Html.BeginForm())
  {
      <span class="form-control">@Html.LabelFor(m => m.UserName)
      @Html.TextBoxFor(m => m.UserName)</span>

      <span class="form-control">@Html.LabelFor(m => m.Password)
      @Html.PasswordFor(m => m.Password)</span>

      <input type="submit" value="Log in" class="btn btn-primary btn-large" />
  }
</div>