@{
  Layout = "_Layout";
}

@model SweetShop.Models.Flavor;

<div class="viewContainer">
  <h2>Flavor Details</h2>
  <hr />
  <h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

  @if(@Model.JoinEntities.Count == 0)
  {
    <p>This flavor is not in any treats!</p>
  }
  else
  {
    <h4>Treats using this flavor:</h4>
    <ul>
    @foreach(var join in Model.JoinEntities)
    {
      <li>@join.Treat.Name</li>
    }
    </ul>
  }

  @if (User.Identity.IsAuthenticated)
      {
        <p>@Html.ActionLink("Add a Treat", "AddTreat", new { id = Model.FlavorId }, new { @class = "btn btn-primary btn-large"})</p>
      }

  <p>@Html.ActionLink("Back to flavors", "Index", null, null, new { @class = "btn btn-primary btn-large" })</p>
  <p>@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId }, new { @class = "btn btn-primary btn-large" })</p>
  <p>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId }, new { @class = "btn btn-primary btn-large" })</p>
</div>