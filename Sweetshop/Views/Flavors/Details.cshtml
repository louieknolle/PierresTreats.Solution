@{
  Layout = "_Layout";
}

@model SweetShop.Models.Flavor;

<h2>Flavor Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This flavor is not in any treats!</p>
}
else
{
  <h4>Treats using this flavor:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Item.Name</li>
  }
  </ul>
}

@if (User.Identity.IsAuthenticated)
    {
      @using (Html.BeginForm("AddTreat", "Flavors"))
      {
        @Html.HiddenFor(model => model.FlavorId)

        <div>
          @Html.Label("Add treat")
          @Html.DropDownList("TreatId", ViewBag.TreatId, "Add selection", new { @class = "form-control"})
        </div>

        <input type="submit" value="Add treat" />
      }
    }

<p>@Html.ActionLink("Back to flavors", "Index")</p>
<p>@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</p>